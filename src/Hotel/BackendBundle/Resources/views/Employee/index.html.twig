{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Employee list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Age</th>
                <th>Maritalstatus</th>
             
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('backend_employees_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.age }}</td>
                <td>{{ entity.textMaritalStatus }}</td>
                <td>{{ entity.textType}}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('backend_employees_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('backend_employees_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('backend_employees_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
